<!-- app/templates/admin/contact.hbs -->
{{#if responseMessage}}
  <div class="alert alert-success">{{removalMessage}}</div>
{{/if}}

  <div class="container">

  <h1>Recieved Messages</h1>
  <table class="table table-hover">

    <thead>
      <tr>
        {{!-- <th>Date</th> --}}
        <th>Name</th>
        <th>Email</th>
        <th>Message</th>
        <th>Remove</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |contact|}}
        <tr>
          {{!-- <td>{{contact.date}}</td> --}}
          <td>{{contact.name}}</td>
          <td>{{contact.email}}</td>
          <td>{{contact.message}}</td>
          <td><button class="btn btn-danger btn-xs" {{action 'deleteMessage' contact}}>Delete</button></td>
        </tr>
      {{/each}}

    </tbody>
  </table>
</div>
