{{#if responseMessage}}
  <div class="alert alert-success">{{responseMessage}}</div>
{{/if}}

<h3 class="buffer">Give me a shout and lets talk about your next project.</h3>

<form class="shrinkIt">
  <div class="form-group">
    <label for="guestName">Name</label>
    {{input type="text" value=guestName class="form-control" placeholder="John Jacob Jingleheimerschmidt"}}
  </div>
  <div class="form-group">
    <label for="guestEmail">Email address</label>
    {{input type="email" value=guestEmail class="form-control" placeholder="Please type your e-mail address."}}
  </div>
  <div class="form-group">
    <label for="guestMessage">Message</label>
    <p>Drop your message here.</p>
    {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=guestMessage}}
  </div>
  <button type="submit" class="btn btn-default" {{action 'sendMessage'}} disabled={{isDisabled}}>Submit</button>
</form>
